{# auth/login.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    {{ error.get() | raw }}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto" >
                <form action="/{{ base }}auth/logout" id="contactForm" method="post" name="sentMessage" novalidate>
                    <div class="control-group">
                        <div style="text-align:center; vertical-align: middle">
                            <h3>Log Out</h3>
                        </div>
                    </div>
                    <div style="text-align:center">
                        <p>
                            Do you want to log out ?</p>
                    </div>
                    <div id="success"></div>
                    <div class="form-group" style="display:flex; justify-content: center">
                        <button class="btn btn-primary" id="sendMessageButton" type="submit">Yes !</button>
                        <button class="btn btn-danger" id="sendAnotherMessageButton">
                            <a href="/PHP_Rush_MVC/articles/listArticle" style="color : white">No Thanks !</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endblock %}
