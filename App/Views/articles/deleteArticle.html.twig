{% extends 'base.html.twig' %}

{% block body %}
    {{ error.get() | raw }}
    <header>
        {{ include('header/header.html.twig') }}
    </header>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Author</th>

            </tr>
        </thead>
        <tbody>
            {% for article in listInfo %}
                <tr>
                    <th scope="row">{{article.id}}</th>
                    <td>{{article.title}}</td>
                    <td>{{article.content}}</td>
                    <td>{{article.author}}</td>
                    {% if user_group == "USER" %}
                        <td>
                            <a href="/PHP_Rush_MVC/articles/editArticle">Edit</a>
                        </td>
                        <td>
                            <a href="/PHP_Rush_MVC/articles/deleteArticle">Delete
                            </a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <form action="/{{ base }}articles/deleteArticle" id="contactForm" method="post" name="sentMessage" novalidate>
                <div class="control-group">
                    <div style="text-align:center; vertical-align: middle">
                        <h3>Log Out</h3>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>id of the title to delete</label>
                        <input class="form-control" data-validation-required-message="Please enter your id." id="id" name="id" placeholder="id" required type="text">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div style="text-align:center">
                    <p>
                        Do you want to delete this article ?</p>
                </div>
                <div id="success"></div>
                <div class="form-group" style="display:flex; justify-content: center">
                    <button class="btn btn-primary" id="sendMessageButton" type="submit">Yes !</button>
                    <button class="btn btn-danger" id="sendAnotherMessageButton">
                        <a href="/PHP_Rush_MVC/articles/listArticle" style="color : white">No Thanks !</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
