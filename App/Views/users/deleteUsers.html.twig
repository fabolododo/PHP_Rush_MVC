{# users/userPanel.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    {{ error.get() | raw }}
    <header>
        {{ include('header/header.html.twig') }}
    </header>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Group</th>
            </tr>
        </thead>
        <tbody>
            {% for user in userInfo %}
                <tr>
                    <td>{{user.username}}</td>
                    <td>{{user.email}}</td>
                    <td>{{user.user_group}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <form action="/{{ base }}users/deleteUsers" id="contactForm" method="post" name="sentMessage" novalidate>
                <div class="control-group">
                    <div style="text-align:center; vertical-align: middle">
                        <h3>Delete User</h3>
                    </div>
                </div>
                <div style="text-align:center">
                    <p>
                        Do you want to delete this user ?</p>
                </div>
                <div id="success"></div>
                <div class="form-group" style="display:flex; justify-content: center">
                    <button class="btn btn-primary" id="sendMessageButton" type="submit">Yes !</button>
                    <button class="btn btn-danger" id="sendAnotherMessageButton">
                        <a href="/PHP_Rush_MVC/users/userPanel" style="color : white">No Thanks !</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div align="center">
        <a href="/PHP_Rush_MVC/auth/login" style="align:center" title="Redirection to login">Login Page</a>
    </div>
</div>{% endblock %}
